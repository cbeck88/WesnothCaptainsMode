#The draw list macro sets labels on the map to show the schedule, offset from hex LIST_LOC_X, LIST_LOC_Y
#It assumes variabes SCHED_X , SCHED_Y, SCHED_P, SCHED_B with variables in .val key, and PICK_CTR is the curent.
#define DRAW_LIST_OLD
{VARIABLE lx {LIST_LOC_X}}
{VARIABLE ly {LIST_LOC_Y}}
{VARIABLE offset_x 0}
{VARIABLE offset_y 1}
{VARIABLE li 0}
[label]
	x = {LIST_LOC_X}
	y = {LIST_LOC_Y}
	text = "Pick Schedule:"
[/label]

{FOREACH SCHED_P li}
	{IF_VAR (SCHED_B[$li].val) equals true (
		[then]
			{VARIABLE tempstr "Ban"}
		[/then]
		[else]
			{VARIABLE tempstr "Pick"}
		[/else]
	)}

	{VARIABLE c {LIST_COLOR}}
	{IF_VAR li equals $PICK_CTR (
		[then]
			{VARIABLE c {LIST_COLOR_HIGHLIGHTED}}
		[/then]
	)}
	[label]
		x,y = $"({LIST_LOC_X}+$offset_x)", $"({LIST_LOC_Y}+$offset_y)"
		text = "" + $"($li + 1)" + ": P" + $SCHED_P[$li].val + " " + $tempstr
		color = $c
	[/label]

	{VARIABLE_OP offset_y add $offset_x}
	{VARIABLE offset_x $"(1-$offset_x)"}
{NEXT li}
{CLEAR_VARIABLE c}
{CLEAR_VARIABLE offset_x}
{CLEAR_VARIABLE offset_y}
{CLEAR_VARIABLE li}
{CLEAR_VARIABLE tempstr}
#enddef

